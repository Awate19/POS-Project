      <% include include/footer.ejs %>
</footer>
<script>
function checkpass()
{
    let message=document.getElementById('message');
    let passtext=document.getElementById('newpass');
    let confirmtext=document.getElementById('confirm');
        if (passtext.value != confirmtext.value)
        {
            message.innerHTML="Password mismatch"
           message.value=''
           passtext.value=''
           confirmtext.value=''
            return false;
        }
        
}


</script>
