 <section>
        <h1>Change Password</h1>
        <div class="login">
                
            <div style="background-color: greenyellow;" id="message"><%=message%></div>
            
            <form action="/changepassword" method="POST">
                <input type="password" name="oldpass" id="pass" class="lock active" placeholder="Current Password" onfocus="document.getElementById('message').innerHTML=''" />
                <input type="password" name="newpass" id="newpass" class="lock active" placeholder="New Password" onfocus="document.getElementById('message').innerHTML=''" />
                <input type="password" name='confirm' id="confirm" class="lock active" placeholder="Confirm password" onfocus="document.getElementById('message').innerHTML=''"  />
            
                <br> 
                <div class="login-bwn">
                    <input type="submit" value="Change Password" onclick="return checkpass()"/> &nbsp; <h4>Already Registered<a href="/"> Sign in</a></h4>
                </div>
            </form>
        </div>
  </section>

